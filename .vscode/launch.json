{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust (LLDB, WSL2)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/onedrive-sync",
            "args": ["--daemon"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "env": {
                "RUST_LOG": "debug"
            },
            "terminal": "integrated",
            "preLaunchTask": "cargo build"
        }
    ]
} 